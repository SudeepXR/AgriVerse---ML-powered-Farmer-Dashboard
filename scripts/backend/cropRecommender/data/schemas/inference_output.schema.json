{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Crop Recommender Inference Output",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "error"]
    },
    "model_version": {
      "type": "string"
    },
    "message": {
      "type": "string",
      "description": "Error message, required only if status is error"
    },
    "meta": {
      "type": "object",
      "required": ["data_coverage", "disclaimer"],
      "properties": {
        "data_coverage": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "disclaimer": {
          "type": "string"
        },
        "used_imputed_soil_data": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "crop_name",
          "rank",
          "feasibility_score",
          "confidence_level",
          "reasoning",
          "warnings"
        ],
        "properties": {
          "crop_name": {
            "type": "string"
          },
          "rank": {
            "type": "integer",
            "minimum": 1
          },
          "feasibility_score": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          },
          "confidence_level": {
            "type": "string",
            "enum": ["Low", "Medium", "High"]
          },
          "reasoning": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "if": {
    "properties": { "status": { "const": "success" } }
  },
  "then": {
    "required": ["model_version", "meta", "recommendations"]
  },
  "else": {
    "required": ["message"]
  },
  "additionalProperties": false
}
